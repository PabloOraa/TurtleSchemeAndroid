<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <DatePicker
            android:id="@+id/tv_media_publishDate_add"
            android:layout_width="399dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:inputType="date"
            android:text=""
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_media_gender_add"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/tv_media_language_add"
            app:layout_constraintTop_toBottomOf="@+id/tv_media_plot_add" />

        <ImageView
            android:id="@+id/im_media_cover_add"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="96dp"
            android:contentDescription="@string/cover_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <EditText
            android:id="@+id/tv_media_title_add"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="164dp"
            android:layout_marginEnd="24dp"
            android:autofillHints=""
            android:hint="@string/title_hint"
            android:inputType="text"
            android:text=''
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_media_author_add"
            app:layout_constraintEnd_toStartOf="@+id/tv_media_author_add"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_media_author_add"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/tv_media_author_add"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="164dp"
            android:autofillHints=""
            android:hint="@string/author"
            android:inputType="text"
            android:text=""
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_media_cover_add" />

        <EditText
            android:id="@+id/tv_media_publisher_add"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="@string/publisher"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_media_title_add"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_media_title_add"
            app:layout_constraintTop_toBottomOf="@+id/tv_media_title_add"
            android:autofillHints="" />

        <EditText
            android:id="@+id/tv_media_language_add"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:inputType="text"
            android:text=""
            android:hint="@string/language"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_media_publisher_add"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_media_publisher_add"
            app:layout_constraintTop_toBottomOf="@+id/tv_media_publisher_add"
            android:autofillHints="" />

        <EditText
            android:id="@+id/tv_media_gender_add"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/gender"
            android:inputType="text"
            android:text=""
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_media_directorAlbum_add"
            app:layout_constraintStart_toStartOf="@+id/tv_media_directorAlbum_add"
            app:layout_constraintTop_toTopOf="@+id/tv_media_language_add" />

        <EditText
            android:id="@+id/tv_media_plot_add"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:autofillHints=""
            android:hint="@string/plot_desc"
            android:inputType="textLongMessage"
            android:justificationMode="inter_word"
            android:text=""
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_media_language_add"
            app:layout_constraintStart_toStartOf="@+id/tv_media_language_add"
            app:layout_constraintTop_toBottomOf="@+id/tv_media_language_add" />

        <EditText
            android:id="@+id/tv_media_directorAlbum_add"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/director"
            android:inputType="text"
            android:text=""
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_media_publisher_add"
            app:layout_constraintEnd_toEndOf="@+id/tv_media_author_add"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/tv_media_author_add"
            app:layout_constraintTop_toTopOf="@+id/tv_media_publisher_add" />

        <EditText
            android:id="@+id/tv_media_duration_add"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/duration"
            android:inputType="number|text"
            android:text=""
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_media_gender_add"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_media_gender_add"
            app:layout_constraintTop_toTopOf="@+id/tv_media_plot_add" />

        <Button
            android:id="@+id/bt_add_media_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:text="@string/add"
            app:layout_constraintBottom_toTopOf="@+id/im_media_cover_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.041" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>